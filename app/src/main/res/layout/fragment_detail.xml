<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">




        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.example.laurent.popularmovies.DetailActivityFragment">
            <!--android:layout_weight="1"-->
            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:background="@android:color/holo_blue_dark"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="CHAPPIE"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">
                <!--android:layout_weight="1"-->


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/detail_poster"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    fresco:backgroundImage="@android:color/holo_blue_dark"
                    fresco:fadeDuration="0" />
                <!--android:layout_weight="1"-->

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical"

                    >
                    <!--android:layout_weight="1"-->


                    <TextView
                        android:id="@+id/detail_release_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2015"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                        android:textStyle="bold" />


                    <!--<TextView-->
                    <!--android:id="@+id/detail_popularity"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center"-->
                    <!--android:textStyle="italic"-->
                    <!--/>-->

                    <!--<TextView-->
                    <!--android:id="@+id/detail_insert_order"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center"-->
                    <!--android:textStyle="italic"-->
                    <!--/>-->
                    <!--<TextView-->
                    <!--android:id="@+id/detail_duration"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center"-->
                    <!--android:text="120min"-->
                    <!--android:textStyle="italic"-->
                    <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"-->
                    <!--/>-->

                    <TextView
                        android:id="@+id/detail_rating"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="8.2/10"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/detail_favorite_button"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/favorite_add_to_button_text"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/detail_synopsis"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="A LOT OF TEXT, SYNOPSIS OF THE MOVIE........." />


        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:text="Reviews for this movie"
        />
    
    <ListView
        android:id="@+id/detail_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        xmlns:android="http://schemas.android.com/apk/res/android" />
    <!--android:layout_weight="1"-->
</LinearLayout>
