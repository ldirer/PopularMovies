<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.laurent.popularmovies.DetailActivityFragment">

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center_vertical"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:elevation="4dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:text="CHAPPIE"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">
        <!--android:layout_weight="1"-->


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/detail_poster"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            fresco:backgroundImage="@android:color/holo_blue_dark"
            fresco:fadeDuration="0"
            fresco:progressBarImage="@android:drawable/progress_horizontal" />
        <!--android:layout_weight="1"-->

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"

            >
            <!--android:layout_weight="1"-->


            <TextView
                android:id="@+id/detail_release_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2015"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                />


            <!--<TextView-->
